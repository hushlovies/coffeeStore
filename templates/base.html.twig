<!DOCTYPE html>
<html>
	<head>
		<meta
		charset="UTF-8">
		{# <title>{% block title %}Welcome!{% endblock %}</title> #}
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<header>
		{% block header %}
			<div class="container header-container">
				<div class="row">
					<div class="col-2">
						<a href="../">
							<img class="card-img-top" src="{{ asset('image/Logo.jpg') }}" alt="logo">
						</a>
					</div>

					<div class="col-10 contents">
						<a href="../product">Shop</a>
						<a href="../aboutUs">About us</a>
						<a href="../{{app.user ? 'logout' : 'login'}}">{{app.user ? 'logout' : 'login'}}</a>
						{% if app.user == null %}
							<a href="../register">Signup</a>
						{% else %}
							<a style="color:#E29348" href="../account/{{app.user.id}}">{{ app.user.nom}}</a>

						{% endif %}

						<a href="../order">Order</a>
					</div>
				</div>
			</div>

		{% endblock %}
	</header>

	<body>
		{% block body %}{% endblock %}
	</body>

	<footer>
		{% block footer %}
			<div class="container">
				<div class="row">
					<h4>(c) 2023 This website is made by Kaira Canaria</h4>
				</div>
			</div>
		{% endblock %}
	</footer>

</html></html>
