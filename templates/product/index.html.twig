{% extends "base.html.twig" %}


{% block title %}
	Products

{% endblock %}


{% block body %}


	<div class="container products_container">
		<h2>Blanche Blends</h2>
		<div class="row my-5">
			{% for product in products %}
				<div class="col-4 mb-5">
					<div class="card" style="width: 18rem;">
						<img class="card-img-top" src="{{ asset('image/Creme.png') }}" alt="Card image cap">
						<div class="card-body">
							<h5 class="card-title product_title">{{ product.name }}</h5>
							<p class="card-text dtn">{{ product.description }}</p>
							<a href="../order/add/{{product.id}}" class=" btn btn-primary">Add to cart</a>
						</div>

					</div>
				</div>
			{% endfor %}
		</div>

	</div>

{% endblock %}
